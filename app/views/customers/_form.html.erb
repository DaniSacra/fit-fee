<%= form_with(model: customer, class: 'needs-validation', novalidate: true) do |form| %>
  <% if customer.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <h2><%= pluralize(customer.errors.count, "error") %> prohibited this customer from being saved:</h2>
      <ul>
        <% customer.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :name, class: 'form-label' %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= form.label :phone, class: 'form-label' %>
    <%= form.text_field :phone, class: 'form-control' %>
  </div>

    <div class="mb-3">
      <%= form.label :subscription_fee, class: 'form-label' %>
      <%= form.text_field :subscription_fee, class: 'form-control' %>
    </div>

  <div class="mb-3">
    <%= form.label :start_date, class: 'form-label' %>
    <%= form.date_field :start_date, class: 'form-control', html5: true %>
  </div>

  <div class="d-flex justify-content-between">
    <%= link_to "Back", customers_path, class: "btn btn-secondary" %>
    <%= form.submit class: 'btn btn-success me-2' %>
  </div>

<% end %>
