<div class="container">
  <h2 class="mb-4 text-center">Payments for <%= @customer.name %></h2>
    
  <%= render "payments_table" %>

  <%= render "missing_payments" %>

  <div class="col-lg-6 col-xxl-4 my-5 mx-auto">
    <div class="d-grid gap-2">
      <%= link_to "Back to customers", customers_path, class: "btn btn-outline-secondary" %>
      <%= link_to "Edit this customer", edit_customer_path(@customer), class: "btn btn-primary" %>
    </div>
  </div>

</div>
