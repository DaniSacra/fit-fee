<%= form_with(model: [customer, payment], local: true, html: { class: "needs-validation", novalidate: "" }) do |form| %>
  <% if payment.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <h4 class="alert-heading">Please review the following errors:</h4>
      <ul>
        <% payment.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :amount, class: 'form-label' %>
    <%= form.number_field :amount, step: 0.01, class: 'form-control', required: true %>
  </div>

  <div class="mb-3">
    <%= form.label :payment_date, class: 'form-label' %>
    <%= form.date_field :payment_date, class: 'form-control', required: true %>
  </div>

  <!-- Removido o campo de seleção do cliente, já que o cliente é pré-definido -->
  
  <div class="text-center">
    <%= form.submit class: 'btn btn-success' %>
  </div>
<% end %>
